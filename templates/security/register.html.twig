{% extends 'base.html.twig' %}

{% block title %}Register - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <h1>Create Account</h1>

        <form method="post" action="{{ path('app_register') }}">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required minlength="6">
            </div>

            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" id="confirm_password" name="confirm_password" required minlength="6">
            </div>

            <button type="submit" class="btn btn-large btn-block">Register</button>
        </form>

        <p class="auth-footer">
            Already have an account? <a href="{{ path('app_login') }}">Login here</a>
        </p>
    </div>
</div>
{% endblock %}
