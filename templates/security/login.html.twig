{% extends 'base.html.twig' %}

{% block title %}Login - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <h1>Login</h1>
        
        {% if error %}
            <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="_password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-large btn-block">Login</button>
        </form>

        <p class="auth-footer">
            Don't have an account? <a href="{{ path('app_register') }}">Register here</a>
        </p>
    </div>
</div>
{% endblock %}
