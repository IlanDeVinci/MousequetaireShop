{% extends 'base.html.twig' %}

{% block title %}Products - Mousquetaire Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .products-page {
            background: #bce9ff;
            min-height: calc(100vh - 200px);
            padding: 60px 50px;
        }

        .page-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 64px;
            color: #0e112b;
            text-align: center;
            margin-bottom: 50px;
            letter-spacing: -2.56px;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            max-width: 1400px;
            margin: 0 auto;
            transition: all 0.3s ease;
        }

        .products-grid.full-view {
            grid-template-columns: 1fr;
            max-width: 1200px;
        }

        .empty-state {
            text-align: center;
            padding: 100px 20px;
            background: white;
            border: 5px solid #0e112b;
            border-radius: 22px;
            max-width: 600px;
            margin: 0 auto;
        }

        .empty-state h2 {
            font-family: 'Oxanium', sans-serif;
            font-size: 32px;
            color: #0e112b;
            margin-bottom: 15px;
        }

        .empty-state p {
            font-family: 'Inter', sans-serif;
            font-size: 18px;
            color: #666;
        }

        .load-more-section {
            text-align: center;
            margin-top: 50px;
        }

        .load-more-btn {
            background: #0e112b;
            color: white;
            border: none;
            padding: 18px 50px;
            border-radius: 50px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .load-more-btn:hover {
            background: #181e4b;
            transform: scale(1.05);
        }

        .load-more-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .products-loader {
            display: none;
            justify-content: center;
            align-items: center;
            padding: 40px;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #f3f3f3;
            border-top: 5px solid #0e112b;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .filter-section {
            background: white;
            border: 3px solid #0e112b;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 40px;
            max-width: 1400px;
            margin-left: auto;
            margin-right: auto;
        }

        .filter-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .filter-title {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 20px;
            color: #0e112b;
        }

        .filter-options {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-group label {
            font-family: 'Inter', sans-serif;
            font-size: 14px;
            font-weight: 600;
            color: #0e112b;
        }

        .filter-input, .filter-select {
            padding: 10px 16px;
            border: 2px solid #0e112b;
            border-radius: 8px;
            font-family: 'Inter', sans-serif;
            font-size: 14px;
            outline: none;
            background: white;
        }

        .filter-input:focus, .filter-select:focus {
            border-color: #181e4b;
        }

        .filter-checkbox {
            display: flex;
            align-items: center;
            gap: 8px;
            font-family: 'Inter', sans-serif;
            font-size: 14px;
        }

        .filter-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .filter-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .filter-btn {
            background: #0e112b;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .filter-btn:hover {
            background: #181e4b;
            transform: translateY(-2px);
        }

        .clear-filter-btn {
            background: white;
            color: #0e112b;
            border: 2px solid #0e112b;
        }

        .clear-filter-btn:hover {
            background: #f5f5f5;
        }

        .sort-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sort-group label {
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
            color: #0e112b;
        }

        .view-mode-btn {
            background: transparent;
            border: none;
            padding: 12px 25px;
            border-radius: 50px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
            font-size: 14px;
            color: #0e112b;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .view-mode-btn:hover {
            background: rgba(14, 17, 43, 0.1);
        }

        .view-mode-btn.active {
            background: #0e112b;
            color: white;
        }

        .view-mode-btn svg {
            width: 20px;
            height: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="products-page">
    <h1 class="page-title">Nos Produits</h1>

    <!-- View Mode Toggle -->
    <div style="text-align: center; margin-bottom: 30px;">
        <div style="display: inline-flex; gap: 15px; background: white; border: 3px solid #0e112b; border-radius: 50px; padding: 8px;">
            <button class="view-mode-btn active" data-mode="grid" id="grid-view-btn">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"/>
                    <rect x="14" y="3" width="7" height="7"/>
                    <rect x="3" y="14" width="7" height="7"/>
                    <rect x="14" y="14" width="7" height="7"/>
                </svg>
                <span>Grille</span>
            </button>
            <button class="view-mode-btn" data-mode="full" id="full-view-btn">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="8" y1="6" x2="21" y2="6"/>
                    <line x1="8" y1="12" x2="21" y2="12"/>
                    <line x1="8" y1="18" x2="21" y2="18"/>
                    <line x1="3" y1="6" x2="3.01" y2="6"/>
                    <line x1="3" y1="12" x2="3.01" y2="12"/>
                    <line x1="3" y1="18" x2="3.01" y2="18"/>
                </svg>
                <span>Liste</span>
            </button>
        </div>
    </div>

    <!-- Filter & Sort Section -->
    <div class="filter-section">
        <div class="filter-header">
            <h3 class="filter-title">üîç Filtrer et Trier</h3>
        </div>
        <div class="filter-options">
            <div class="filter-group">
                <label for="filter-category">Cat√©gorie</label>
                <select id="filter-category" class="filter-select">
                    <option value="">Toutes les cat√©gories</option>
                    <!-- Categories will be loaded dynamically -->
                </select>
            </div>
            
            <div class="filter-checkbox">
                <input type="checkbox" id="filter-in-stock">
                <label for="filter-in-stock">En stock uniquement</label>
            </div>
            
            <div class="sort-group">
                <label for="sort-select">Trier par:</label>
                <select id="sort-select" class="filter-select">
                    <option value="newest">Plus r√©cents</option>
                    <option value="price-asc">Prix croissant</option>
                    <option value="price-desc">Prix d√©croissant</option>
                    <option value="name">Nom (A-Z)</option>
                </select>
            </div>
        </div>
        <div class="filter-actions">
            <button class="filter-btn" id="apply-filters">Appliquer les filtres</button>
            <button class="filter-btn clear-filter-btn" id="clear-filters">R√©initialiser</button>
        </div>
    </div>

    {% if products is empty %}
        <div class="empty-state">
            <h2>Aucun produit disponible</h2>
            <p>Revenez bient√¥t pour d√©couvrir nos nouveaut√©s !</p>
        </div>
    {% else %}
        <div class="products-grid" id="products-grid">
            {% for product in products %}
                <product-card
                    product-id="{{ product.id }}"
                    product-name="{{ product.name }}"
                    product-price="{{ product.price }}"
                    product-description="{{ product.description }}"
                    product-stock="{{ product.stock }}"
                    product-category="{{ product.category.name }}"
                    {% if product.medias|length > 0 %}
                    product-images='{{ product.medias|map(m => asset('uploads/' ~ m.filePath))|json_encode|raw }}'
                    product-image="{{ asset('uploads/' ~ product.medias.first.filePath) }}"
                    {% elseif product.media and product.media.filePath %}
                    product-image="{{ asset('uploads/' ~ product.media.filePath) }}"
                    {% endif %}
                    product-url="{{ path('app_product_show', {id: product.id}) }}"
                    {% if is_granted('ROLE_USER') %}is-authenticated="true"{% endif %}
                ></product-card>
            {% endfor %}
        </div>

        <!-- Loader -->
        <div class="products-loader" id="products-loader">
            <div class="spinner"></div>
        </div>

        <!-- Load More Button -->
        <div class="load-more-section">
            <button class="load-more-btn" id="load-more-btn">
                Charger plus de produits
            </button>
        </div>
    {% endif %}
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="module">
    // Product Loader functionality
    class ProductLoader {
      constructor(containerSelector) {
        this.container = document.querySelector(containerSelector);
        this.currentPage = 1;
        this.isLoading = false;
        this.hasMore = true;
        this.isAuthenticated = document.querySelector('.cart-badge') !== null;
        this.viewMode = localStorage.getItem('productViewMode') || 'grid';
        this.allProducts = []; // Store all products for client-side sorting
        this.applyViewMode();
        this.cacheInitialProducts();
      }

      cacheInitialProducts() {
        // Cache the initial products from the server
        const cards = this.container.querySelectorAll('product-card');
        cards.forEach(card => {
          this.allProducts.push({
            id: card.getAttribute('product-id'),
            name: card.getAttribute('product-name'),
            price: parseFloat(card.getAttribute('product-price')),
            stock: parseInt(card.getAttribute('product-stock')),
            element: card,
          });
        });
      }

      applyViewMode() {
        if (this.viewMode === 'full') {
          this.container.classList.add('full-view');
        } else {
          this.container.classList.remove('full-view');
        }

        // Update all product cards
        const cards = this.container.querySelectorAll('product-card');
        cards.forEach(card => {
          card.setAttribute('view-mode', this.viewMode);
        });
      }

      setViewMode(mode) {
        this.viewMode = mode;
        localStorage.setItem('productViewMode', mode);
        this.applyViewMode();
        
        // Reinitialize all swipers after view mode change
        setTimeout(() => {
          const cards = this.container.querySelectorAll('product-card');
          cards.forEach(card => {
            // Trigger re-initialization by toggling the attribute
            const currentMode = card.getAttribute('view-mode');
            card.removeAttribute('view-mode');
            requestAnimationFrame(() => {
              card.setAttribute('view-mode', mode);
            });
          });
        }, 50);
      }

      sortProducts(sortBy) {
        const cards = Array.from(this.container.querySelectorAll('product-card'));
        
        cards.sort((a, b) => {
          const aPrice = parseFloat(a.getAttribute('product-price'));
          const bPrice = parseFloat(b.getAttribute('product-price'));
          const aName = a.getAttribute('product-name');
          const bName = b.getAttribute('product-name');
          const aId = parseInt(a.getAttribute('product-id'));
          const bId = parseInt(b.getAttribute('product-id'));

          switch(sortBy) {
            case 'price-asc':
              return aPrice - bPrice;
            case 'price-desc':
              return bPrice - aPrice;
            case 'name':
              return aName.localeCompare(bName);
            case 'newest':
            default:
              return bId - aId;
          }
        });

        // Clear and re-append in sorted order
        this.container.innerHTML = '';
        cards.forEach(card => this.container.appendChild(card));
      }

      async loadMore() {
        if (this.isLoading || !this.hasMore) return;

        this.isLoading = true;
        this.showLoader();

        try {
          this.currentPage++;
          const response = await fetch(
            `/api/products?page=${this.currentPage}&limit=12`
          );
          const data = await response.json();

          if (!data.products || data.products.length === 0) {
            this.hasMore = false;
            this.hideLoadMoreButton();
            return;
          }

          this.appendProducts(data.products);

          if (this.currentPage >= data.pages) {
            this.hasMore = false;
            this.hideLoadMoreButton();
          }
        } catch (error) {
          console.error("Error loading products:", error);
        } finally {
          this.isLoading = false;
          this.hideLoader();
        }
      }

      async filterProducts(filters) {
        if (this.isLoading) return;

        this.isLoading = true;
        this.showLoader();

        try {
          const params = new URLSearchParams();
          if (filters.category) params.append("category", filters.category);
          if (filters.minPrice) params.append("min_price", filters.minPrice);
          if (filters.maxPrice) params.append("max_price", filters.maxPrice);
          if (filters.inStock) params.append("in_stock", "true");

          const response = await fetch(`/api/products/filter?${params}`);
          const data = await response.json();

          this.clearProducts();
          if (data.products && data.products.length > 0) {
            this.appendProducts(data.products);
          } else {
            this.container.innerHTML = '<div style="text-align: center; padding: 40px; font-family: Inter, sans-serif; color: #666;">Aucun produit trouv√©</div>';
          }
        } catch (error) {
          console.error("Error filtering products:", error);
        } finally {
          this.isLoading = false;
          this.hideLoader();
        }
      }

      appendProducts(products) {
        products.forEach((product) => {
          const card = this.createProductCard(product);
          this.container.appendChild(card);

          // Animate the new card
          if (window.gsap) {
            gsap.from(card, {
              y: 60,
              opacity: 0,
              duration: 0.8,
              ease: "power2.out",
            });
          }
        });
      }

      createProductCard(product) {
        const card = document.createElement("product-card");
        card.setAttribute("product-id", product.id);
        card.setAttribute("product-name", product.name);
        card.setAttribute("product-price", product.price);
        card.setAttribute("product-description", product.description || "");
        card.setAttribute("product-stock", product.stock);
        card.setAttribute("product-category", product.category || "");
        card.setAttribute("product-url", `/product/${product.id}`);
        card.setAttribute("view-mode", this.viewMode);

        // Handle multiple images
        if (product.images && product.images.length > 0) {
          card.setAttribute("product-images", JSON.stringify(product.images));
          card.setAttribute("product-image", product.images[0]);
        } else if (product.image) {
          card.setAttribute("product-image", product.image);
        }

        if (this.isAuthenticated) {
          card.setAttribute("is-authenticated", "true");
        }

        return card;
      }

      clearProducts() {
        this.container.innerHTML = "";
        this.currentPage = 1;
        this.hasMore = true;
      }

      showLoader() {
        const loader = document.getElementById("products-loader");
        if (loader) {
          loader.style.display = "flex";
        }
      }

      hideLoader() {
        const loader = document.getElementById("products-loader");
        if (loader) {
          loader.style.display = "none";
        }
      }

      hideLoadMoreButton() {
        const button = document.getElementById("load-more-btn");
        if (button) {
          button.style.display = "none";
        }
      }
    }

    const loader = new ProductLoader('#products-grid');

    // Load categories on page load
    async function loadCategories() {
      try {
        const response = await fetch('/api/categories');
        const data = await response.json();
        
        // Handle API Platform JSON-LD format
        const categories = data.member || data['hydra:member'] || data;
        
        const categorySelect = document.getElementById('filter-category');
        if (categorySelect && Array.isArray(categories)) {
          categories.forEach(category => {
            const option = document.createElement('option');
            option.value = category.id;
            option.textContent = category.name;
            categorySelect.appendChild(option);
          });
        }
      } catch (error) {
        console.error('Error loading categories:', error);
      }
    }

    // Initialize categories
    loadCategories();

    // View Mode Toggle
    const gridViewBtn = document.getElementById('grid-view-btn');
    const fullViewBtn = document.getElementById('full-view-btn');

    // Set initial active state
    if (loader.viewMode === 'full') {
      gridViewBtn.classList.remove('active');
      fullViewBtn.classList.add('active');
    }

    gridViewBtn?.addEventListener('click', () => {
      loader.setViewMode('grid');
      gridViewBtn.classList.add('active');
      fullViewBtn.classList.remove('active');
    });

    fullViewBtn?.addEventListener('click', () => {
      loader.setViewMode('full');
      fullViewBtn.classList.add('active');
      gridViewBtn.classList.remove('active');
    });

    // Sorting
    document.getElementById('sort-select')?.addEventListener('change', (e) => {
      loader.sortProducts(e.target.value);
    });

    // Load More button
    document.getElementById('load-more-btn')?.addEventListener('click', () => {
        loader.loadMore();
    });

    // Apply Filters
    document.getElementById('apply-filters')?.addEventListener('click', () => {
        const filters = {
            category: document.getElementById('filter-category').value,
            inStock: document.getElementById('filter-in-stock').checked,
        };
        loader.filterProducts(filters);
    });

    // Clear Filters
    document.getElementById('clear-filters')?.addEventListener('click', () => {
        document.getElementById('filter-category').value = '';
        document.getElementById('filter-in-stock').checked = false;
        document.getElementById('sort-select').value = 'newest';
        location.reload();
    });
    </script>
{% endblock %}
