{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="product-detail-page">
    <div class="container">
        <div class="product-detail">
            <div class="product-detail-gallery">
                {% if product.medias|length > 0 %}
                    <div class="gallery-images-grid">
                        {% for media in product.medias %}
                            <div class="gallery-image-item gallery-image-{{ loop.index }}">
                                {% if media.filePath ends with '.mp4' or media.filePath ends with '.webm' %}
                                    <video controls loop muted>
                                        <source src="{{ asset('uploads/' ~ media.filePath) }}" type="video/{{ media.filePath|split('.')|last }}">
                                    </video>
                                {% else %}
                                    <img src="{{ asset('uploads/' ~ media.filePath) }}" alt="{{ product.name }} - Image {{ loop.index }}">
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    {# Mobile slider - shown only on mobile #}
                    <div class="gallery-slider">
                        <button class="slider-btn slider-prev" aria-label="Previous image">‚Äπ</button>
                        <button class="slider-btn slider-next" aria-label="Next image">‚Ä∫</button>
                        {% for media in product.medias %}
                            <div class="slider-item">
                                {% if media.filePath ends with '.mp4' or media.filePath ends with '.webm' %}
                                    <video controls loop muted>
                                        <source src="{{ asset('uploads/' ~ media.filePath) }}" type="video/{{ media.filePath|split('.')|last }}">
                                    </video>
                                {% else %}
                                    <img src="{{ asset('uploads/' ~ media.filePath) }}" alt="{{ product.name }} - Image {{ loop.index }}">
                                {% endif %}
                            </div>
                        {% endfor %}
                        <div class="slider-dots">
                            {% for media in product.medias %}
                                <span class="dot {% if loop.first %}active{% endif %}" data-index="{{ loop.index0 }}"></span>
                            {% endfor %}
                        </div>
                    </div>
                {% elseif product.media and product.media.filePath %}
                    <div class="gallery-images-grid">
                        <div class="gallery-image-item gallery-image-1">
                            <img src="{{ asset('uploads/' ~ product.media.filePath) }}" alt="{{ product.name }}">
                        </div>
                    </div>
                {% else %}
                    <div class="gallery-images-grid">
                        <div class="gallery-image-item gallery-image-1">
                            <div class="product-placeholder-large">‚å®Ô∏è</div>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="product-detail-info">
                <h1>{{ product.name }}</h1>
                <p class="product-detail-price">{{ product.price|number_format(2, ',', ' ') }} ‚Ç¨</p>
                <p class="product-detail-description">{{ product.description }}</p>
                
                <div class="product-meta">
                    <p>
                        <strong>Stock:</strong> 
                        {% if product.stock > 10 %}
                            <span class="stock-badge available">‚úì En stock ({{ product.stock }} disponibles)</span>
                        {% elseif product.stock > 0 %}
                            <span class="stock-badge low">‚ö† Stock limit√© ({{ product.stock }} restants)</span>
                        {% else %}
                            <span class="stock-badge out">‚úó Rupture de stock</span>
                        {% endif %}
                    </p>
                    <p><strong>Cat√©gorie:</strong> {{ product.category ? product.category.name : 'Non cat√©goris√©' }}</p>
                </div>
                
                <div class="product-actions">
                    {% if is_granted('ROLE_USER') %}
                        {% if product.stock > 0 %}
                            <div class="quantity-selector">
                                <button type="button" class="qty-btn" id="qty-minus">‚àí</button>
                                <input type="number" id="qty-input" value="1" min="1" max="{{ product.stock }}" class="qty-input">
                                <button type="button" class="qty-btn" id="qty-plus">+</button>
                            </div>
                            <button class="btn btn-large"
                                    id="add-to-cart-btn"
                                    data-product-id="{{ product.id }}"
                                    data-product-name="{{ product.name }}"
                                    data-product-price="{{ product.price }}">
                                üõí Ajouter au panier
                            </button>
                        {% else %}
                            <button class="btn btn-large" disabled>Rupture de stock</button>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-large">Connectez-vous pour acheter</a>
                    {% endif %}
                    <a href="{{ path('app_products') }}" class="btn btn-secondary">Retour aux produits</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
