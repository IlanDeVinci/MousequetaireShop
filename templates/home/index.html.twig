{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Section Hero */
        .hero {
            background: #0e112b;
            height: 696px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-pattern {
            position: absolute;
            width: 100%;
            height: 100%;
            background-image:
                repeating-linear-gradient(45deg, transparent, transparent 100px, rgba(255, 255, 255, 0.03) 100px, rgba(255, 255, 255, 0.03) 200px);
        }

        .keyboard-pattern {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0.15;
        }

        .keyboard-icon {
            position: absolute;
            width: 100px;
            height: 70px;
            animation: float 6s ease-in-out infinite;
        }

        .keyboard-icon svg {
            width: 100%;
            height: 100%;
        }

        .keyboard-icon:nth-child(1) { left: 5%; top: 20%; animation-delay: 0s; }
        .keyboard-icon:nth-child(2) { left: 15%; top: 60%; animation-delay: 1s; }
        .keyboard-icon:nth-child(3) { left: 25%; top: 35%; animation-delay: 2s; }
        .keyboard-icon:nth-child(4) { right: 25%; top: 25%; animation-delay: 1.5s; }
        .keyboard-icon:nth-child(5) { right: 15%; top: 65%; animation-delay: 0.5s; }
        .keyboard-icon:nth-child(6) { right: 5%; top: 45%; animation-delay: 2.5s; }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .hero-content {
            background: #181e4b;
            border: 5px solid white;
            border-radius: 11px;
            padding: 40px 60px;
            text-align: center;
            z-index: 2;
            max-width: 700px;
        }

        .hero-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 64px;
            color: white;
            letter-spacing: -2.56px;
            line-height: 1.2;
            margin-bottom: 20px;
        }

        .hero-subtitle {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 30px;
            color: white;
            letter-spacing: -1.2px;
        }

        /* Section Produits */
        .products {
            background: #bce9ff;
            padding: 80px 50px;
            text-align: center;
        }

        .products-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 64px;
            color: #0e112b;
            letter-spacing: -2.56px;
            margin-bottom: 30px;
        }

        .products-description {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 17px;
            color: #0e112b;
            letter-spacing: -0.68px;
            margin-bottom: 50px;
            max-width: 1061px;
            margin-left: auto;
            margin-right: auto;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(4, 325px);
            gap: 24px;
            justify-content: center;
            margin-bottom: 60px;
        }

        .product-card {
            background: #ddf4ff;
            border: 5px solid #0e112b;
            border-radius: 22px;
            width: 325px;
            height: 325px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            transition: transform 0.3s;
        }

        .product-card:hover {
            transform: translateY(-10px);
        }

        .product-image {
            max-width: 90%;
            max-height: 90%;
            object-fit: contain;
            filter: drop-shadow(0px 33px 57.8px rgba(0, 0, 0, 0.72));
        }

        .shop-button {
            background: #0e112b;
            color: white;
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 27px;
            letter-spacing: -1.08px;
            padding: 20px 80px;
            border-radius: 57px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .shop-button:hover {
            background: #1a1f4d;
            transform: scale(1.05);
        }

        /* Section Pourquoi */
        .why-section {
            background: #181e4b;
            padding: 80px 50px;
            text-align: center;
            position: relative;
        }

        .why-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 59px;
            color: white;
            letter-spacing: -2.36px;
            margin-bottom: 80px;
        }

        .why-grid {
            display: flex;
            justify-content: center;
            gap: 80px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .why-item {
            background: #0e112b;
            width: 319px;
            height: 319px;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .why-item p {
            color: white;
            font-size: 24px;
            font-weight: 700;
            padding: 40px;
        }

        .sparkle {
            position: absolute;
            width: 50px;
            height: 50px;
            opacity: 0.4;
        }

        .sparkle svg {
            width: 100%;
            height: 100%;
        }

        .sparkle-1 { top: -40px; left: -40px; }
        .sparkle-2 { top: 50%; right: -60px; transform: translateY(-50%); }
        .sparkle-3 { bottom: -40px; right: -40px; }

        /* Responsive */
        @media (max-width: 1400px) {
            .products-grid {
                grid-template-columns: repeat(2, 325px);
            }
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 40px;
            }

            .hero-subtitle {
                font-size: 20px;
            }

            .products-grid {
                grid-template-columns: 1fr;
            }

            .why-grid {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
{% endblock %}

