{% extends 'base.html.twig' %}

{% block title %}Mousquetaire Shop - Accueil{% endblock %}

{% block body %}
    <!-- Section Hero -->
    <section class="hero">
        <div class="hero-pattern"></div>
        <div class="keyboard-pattern">
            <div class="grid-container" id="hero-grid" 
                 data-grosse-image="{{ asset('images/grosse_touche.png') }}"
                 data-petite-image="{{ asset('images/petite_touche.png') }}">
            </div>
        </div>
        <div class="hero-content">
            <h1 class="hero-title">Bienvenue sur Mousequetaire Shop</h1>
            <p class="hero-subtitle">Les meilleurs designers d'informatique !</p>
        </div>
    </section>

    <!-- Section Produits -->
    <section class="products">
        <h2 class="products-title">Nos produits</h2>
        <p class="products-description">
            Nous proposons une gamme de produits informatiques designés par nos soins
        </p>
        <div class="products-grid">
            {% if products is empty %}
                <div class="product-card">
                    <svg class="product-image" width="258" height="172" viewBox="0 0 258 172" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="10" y="20" width="238" height="132" rx="8" fill="#5a5a5a"/>
                        <rect x="15" y="25" width="228" height="102" rx="4" fill="#2a2a2a"/>
                    </svg>
                </div>
            {% else %}
                {% for product in products %}
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="product-card" style="text-decoration: none;">
                        {% if product.media and product.media.filePath %}
                            <img src="{{ asset('uploads/' ~ product.media.filePath) }}" alt="{{ product.name }}" class="product-image">
                        {% else %}
                            <svg class="product-image" width="258" height="172" viewBox="0 0 258 172" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="10" y="20" width="238" height="132" rx="8" fill="#5a5a5a"/>
                                <rect x="15" y="25" width="228" height="102" rx="4" fill="#2a2a2a"/>
                                <text x="129" y="90" text-anchor="middle" fill="white" font-size="16" font-family="Oxanium">{{ product.name }}</text>
                            </svg>
                        {% endif %}
                    </a>
                {% endfor %}
            {% endif %}
        </div>
        <a href="{{ path('app_products') }}" class="shop-button">Allez sur la boutique</a>
    </section>

    <!-- Section Pourquoi choisir -->
    <section class="why-section">
        <h2 class="why-title">Pourquoi choisir nos produits ?</h2>
        <div class="why-grid">
            <div class="why-item">
                <span class="sparkle sparkle-1">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L13.5 8.5L20 10L13.5 11.5L12 18L10.5 11.5L4 10L10.5 8.5L12 2Z" fill="white"/>
                        <path d="M19 3L19.5 5.5L22 6L19.5 6.5L19 9L18.5 6.5L16 6L18.5 5.5L19 3Z" fill="white"/>
                    </svg>
                </span>
                <p>Qualité premium</p>
            </div>
            <div class="why-item">
                <span class="sparkle sparkle-2">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L13.5 8.5L20 10L13.5 11.5L12 18L10.5 11.5L4 10L10.5 8.5L12 2Z" fill="white"/>
                        <path d="M19 3L19.5 5.5L22 6L19.5 6.5L19 9L18.5 6.5L16 6L18.5 5.5L19 3Z" fill="white"/>
                    </svg>
                </span>
                <p>Design unique</p>
            </div>
            <div class="why-item">
                <span class="sparkle sparkle-3">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L13.5 8.5L20 10L13.5 11.5L12 18L10.5 11.5L4 10L10.5 8.5L12 2Z" fill="white"/>
                        <path d="M19 3L19.5 5.5L22 6L19.5 6.5L19 9L18.5 6.5L16 6L18.5 5.5L19 3Z" fill="white"/>
                    </svg>
                </span>
                <p>Support client</p>
            </div>
        </div>
    </section>
{% endblock %}
