{% extends 'base.html.twig' %}

{% block title %}Edit Banner - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# styles moved to assets/styles/admin.css #}
{% endblock %}

{% block body %}
<div class="admin-form-container">
    <div class="form-card">
        <h1 class="form-title">Modifier le Bandeau</h1>

        <form method="POST">
            <div class="form-group">
                <label class="form-label" for="banner_text">Texte du bandeau *</label>
                <input 
                    type="text" 
                    id="banner_text" 
                    name="banner_text" 
                    class="form-input" 
                    value="{{ banner_text }}" 
                    required
                >
                <div class="banner-preview" id="preview">{{ banner_text }}</div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">ðŸ’¾ Enregistrer</button>
                <a href="{{ path('app_admin_dashboard') }}" class="btn-cancel">Annuler</a>
            </div>
        </form>
    </div>
</div>

{# updatePreview logic moved to assets/js/admin-forms.js and is attached on DOMContentLoaded #}
{% endblock %}
