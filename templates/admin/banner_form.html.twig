{% extends 'base.html.twig' %}

{% block title %}Edit Banner - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-form-container {
            background: #bce9ff;
            min-height: calc(100vh - 200px);
            padding: 60px 50px;
        }

        .form-card {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border: 5px solid #0e112b;
            border-radius: 22px;
            padding: 40px;
        }

        .form-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 36px;
            color: #0e112b;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            color: #0e112b;
            margin-bottom: 8px;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            border: 3px solid #0e112b;
            border-radius: 11px;
            font-family: 'Inter', sans-serif;
            font-size: 16px;
            transition: all 0.3s;
        }

        .form-input:focus {
            outline: none;
            border-color: #181e4b;
            box-shadow: 0 0 0 3px rgba(14, 17, 43, 0.1);
        }

        .banner-preview {
            background: #0e112b;
            color: white;
            padding: 15px;
            border-radius: 11px;
            text-align: center;
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 14px;
            margin-top: 15px;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-submit {
            flex: 1;
            background: #0e112b;
            color: white;
            border: none;
            padding: 15px;
            border-radius: 11px;
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-submit:hover {
            background: #181e4b;
            transform: scale(1.02);
        }

        .btn-cancel {
            background: transparent;
            color: #0e112b;
            border: 3px solid #0e112b;
            padding: 15px 30px;
            border-radius: 11px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-block;
            text-align: center;
        }

        .btn-cancel:hover {
            background: #0e112b;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-form-container">
    <div class="form-card">
        <h1 class="form-title">Modifier le Bandeau</h1>

        <form method="POST">
            <div class="form-group">
                <label class="form-label" for="banner_text">Texte du bandeau *</label>
                <input 
                    type="text" 
                    id="banner_text" 
                    name="banner_text" 
                    class="form-input" 
                    value="{{ banner_text }}" 
                    required
                    oninput="updatePreview(this.value)"
                >
                <div class="banner-preview" id="preview">{{ banner_text }}</div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">ðŸ’¾ Enregistrer</button>
                <a href="{{ path('app_admin_dashboard') }}" class="btn-cancel">Annuler</a>
            </div>
        </form>
    </div>
</div>

<script>
    function updatePreview(text) {
        document.getElementById('preview').textContent = text;
    }
</script>
{% endblock %}
