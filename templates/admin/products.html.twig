{% extends 'base.html.twig' %}

{% block title %}Admin - Products - Mousquetaire Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-page {
            background: #bce9ff;
            min-height: calc(100vh - 200px);
        }

        .admin-layout {
            display: grid;
            grid-template-columns: 250px 1fr;
        }

        .admin-sidebar {
            background: #181e4b;
            padding: 30px 20px;
            min-height: calc(100vh - 114px);
        }

        .admin-sidebar h2 {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 24px;
            color: white;
            margin-bottom: 30px;
        }

        .admin-nav {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .admin-nav-link {
            padding: 12px 20px;
            border-radius: 11px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            color: white;
            text-decoration: none;
            transition: all 0.3s;
        }

        .admin-nav-link:hover,
        .admin-nav-link.active {
            background: white;
            color: #181e4b;
        }

        .admin-content {
            padding: 40px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .admin-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 36px;
            color: #0e112b;
        }

        .btn-create {
            background: #0e112b;
            color: white;
            padding: 12px 30px;
            border-radius: 11px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-block;
        }

        .btn-create:hover {
            background: #181e4b;
            transform: scale(1.05);
        }

        .admin-table-container {
            background: white;
            border: 5px solid #0e112b;
            border-radius: 22px;
            overflow: hidden;
        }

        .admin-table {
            width: 100%;
            border-collapse: collapse;
        }

        .admin-table thead {
            background: #ddf4ff;
        }

        .admin-table th {
            padding: 20px;
            text-align: left;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 14px;
            color: #0e112b;
            border-bottom: 3px solid #0e112b;
        }

        .admin-table td {
            padding: 18px 20px;
            font-family: 'Inter', sans-serif;
            font-size: 15px;
            color: #333;
            border-bottom: 2px solid #f0f0f0;
        }

        .admin-table tbody tr:hover {
            background: #f9f9f9;
        }

        .admin-table tbody tr:last-child td {
            border-bottom: none;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-edit,
        .btn-delete {
            padding: 8px 16px;
            border-radius: 8px;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }

        .btn-edit {
            background: #3b82f6;
            color: white;
        }

        .btn-edit:hover {
            background: #2563eb;
        }

        .btn-delete {
            background: #ef4444;
            color: white;
        }

        .btn-delete:hover {
            background: #dc2626;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            font-family: 'Inter', sans-serif;
            color: #666;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-page">
    <div class="admin-layout">
        <aside class="admin-sidebar">
            <h2>Admin Panel</h2>
            <nav class="admin-nav">
                <a href="{{ path('app_admin_dashboard') }}" class="admin-nav-link">üìä Dashboard</a>
                <a href="{{ path('app_admin_products') }}" class="admin-nav-link active">üì¶ Produits</a>
                <a href="{{ path('app_admin_categories') }}" class="admin-nav-link">üè∑Ô∏è Cat√©gories</a>
                <a href="{{ path('app_admin_orders') }}" class="admin-nav-link">üõí Commandes</a>
                <a href="{{ path('app_admin_users') }}" class="admin-nav-link">üë• Utilisateurs</a>
                <a href="{{ path('app_admin_banner_edit') }}" class="admin-nav-link">üé® Bandeau</a>
            </nav>
        </aside>

        <main class="admin-content">
            <div class="admin-header">
                <h1 class="admin-title">Gestion des Produits</h1>
                <a href="{{ path('app_admin_product_create') }}" class="btn-create">‚ú® Cr√©er un produit</a>
            </div>

            <div class="admin-table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Cat√©gorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>#{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.price|number_format(2, ',', ' ') }} ‚Ç¨</td>
                                <td>{{ product.stock }}</td>
                                <td>{{ product.category ? product.category.name : 'N/A' }}</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn-edit">‚úèÔ∏è Modifier</a>
                                        <form method="POST" action="{{ path('app_admin_product_delete', {id: product.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');">
                                            <button type="submit" class="btn-delete">üóëÔ∏è Supprimer</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="empty-state">Aucun produit trouv√©</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
{% endblock %}
