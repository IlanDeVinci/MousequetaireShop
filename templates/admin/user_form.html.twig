{% extends 'base.html.twig' %}

{% block title %}Edit User - Admin - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="admin-form-container">
    <div class="form-card">
        <h1 class="form-title">Modifier l'utilisateur</h1>

        <form method="POST">
            <div class="form-group">
                <label class="form-label" for="email">Email *</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-input" 
                    value="{{ user.email }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="first_name">PrÃ©nom</label>
                <input 
                    type="text" 
                    id="first_name" 
                    name="first_name" 
                    class="form-input" 
                    value="{{ user.firstName ?? '' }}"
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="last_name">Nom</label>
                <input 
                    type="text" 
                    id="last_name" 
                    name="last_name" 
                    class="form-input" 
                    value="{{ user.lastName ?? '' }}"
                >
            </div>

            <div class="form-group">
                <label class="form-label">RÃ´les</label>
                <div style="display: flex; flex-direction: column; gap: 10px; margin-top: 10px;">
