{% extends 'base.html.twig' %}

{% block title %}{{ product ? 'Edit' : 'Create' }} Product - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-form-container {
            background: #bce9ff;
            min-height: calc(100vh - 200px);
            padding: 60px 50px;
        }

        .form-card {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border: 5px solid #0e112b;
            border-radius: 22px;
            padding: 40px;
        }

        .form-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 36px;
            color: #0e112b;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            color: #0e112b;
            margin-bottom: 8px;
        }

        .form-input,
        .form-textarea,
        .form-select {
            width: 100%;
            padding: 12px 15px;
            border: 3px solid #0e112b;
            border-radius: 11px;
            font-family: 'Inter', sans-serif;
            font-size: 16px;
            transition: all 0.3s;
        }

        .form-input:focus,
        .form-textarea:focus,
        .form-select:focus {
            outline: none;
            border-color: #181e4b;
            box-shadow: 0 0 0 3px rgba(14, 17, 43, 0.1);
        }

        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-submit {
            flex: 1;
            background: #0e112b;
            color: white;
            border: none;
            padding: 15px;
            border-radius: 11px;
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-submit:hover {
            background: #181e4b;
            transform: scale(1.02);
        }

        .btn-cancel {
            background: transparent;
            color: #0e112b;
            border: 3px solid #0e112b;
            padding: 15px 30px;
            border-radius: 11px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-block;
            text-align: center;
        }

        .btn-cancel:hover {
            background: #0e112b;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-form-container">
    <div class="form-card">
        <h1 class="form-title">{{ product ? 'Modifier' : 'Cr√©er' }} un Produit</h1>

        <form method="POST">
            <div class="form-group">
                <label class="form-label" for="name">Nom du produit *</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="form-input" 
                    value="{{ product ? product.name : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="description">Description *</label>
                <textarea 
                    id="description" 
                    name="description" 
                    class="form-textarea" 
                    required
                >{{ product ? product.description : '' }}</textarea>
            </div>

            <div class="form-group">
                <label class="form-label" for="price">Prix (‚Ç¨) *</label>
                <input 
                    type="number" 
                    id="price" 
                    name="price" 
                    class="form-input" 
                    step="0.01" 
                    min="0"
                    value="{{ product ? product.price : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="stock">Stock *</label>
                <input 
                    type="number" 
                    id="stock" 
                    name="stock" 
                    class="form-input" 
                    min="0"
                    value="{{ product ? product.stock : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="category_id">Cat√©gorie *</label>
                <select id="category_id" name="category_id" class="form-select" required>
                    <option value="">S√©lectionnez une cat√©gorie</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if product and product.category.id == category.id %}selected{% endif %}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    {{ product ? 'üíæ Enregistrer' : '‚ú® Cr√©er' }}
                </button>
                <a href="{{ path('app_admin_products') }}" class="btn-cancel">Annuler</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
