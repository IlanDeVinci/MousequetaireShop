{% extends 'base.html.twig' %}

{% block title %}{{ product ? 'Edit' : 'Create' }} Product - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-form-container {
            background: #bce9ff;
            min-height: calc(100vh - 200px);
            padding: 60px 50px;
        }

        .form-card {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border: 5px solid #0e112b;
            border-radius: 22px;
            padding: 40px;
        }

        .form-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 36px;
            color: #0e112b;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            color: #0e112b;
            margin-bottom: 8px;
        }

        .form-input,
        .form-textarea,
        .form-select {
            width: 100%;
            padding: 12px 15px;
            border: 3px solid #0e112b;
            border-radius: 11px;
            font-family: 'Inter', sans-serif;
            font-size: 16px;
            transition: all 0.3s;
        }

        .form-input:focus,
        .form-textarea:focus,
        .form-select:focus {
            outline: none;
            border-color: #181e4b;
            box-shadow: 0 0 0 3px rgba(14, 17, 43, 0.1);
        }

        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-submit {
            flex: 1;
            background: #0e112b;
            color: white;
            border: none;
            padding: 15px;
            border-radius: 11px;
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-submit:hover {
            background: #181e4b;
            transform: scale(1.02);
        }

        .btn-cancel {
            background: transparent;
            color: #0e112b;
            border: 3px solid #0e112b;
            padding: 15px 30px;
            border-radius: 11px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-block;
            text-align: center;
        }

        .btn-cancel:hover {
            background: #0e112b;
            color: white;
        }

        /* Drag and Drop Zone */
        .drop-zone {
            border: 3px dashed #0e112b;
            border-radius: 11px;
            padding: 40px;
            text-align: center;
            transition: all 0.3s;
            cursor: pointer;
            background: #f8f9fa;
        }

        .drop-zone.dragover {
            background: #ddf4ff;
            border-color: #181e4b;
            transform: scale(1.02);
        }

        .drop-zone-text {
            font-family: 'Inter', sans-serif;
            font-size: 16px;
            color: #666;
            margin-bottom: 10px;
        }

        .drop-zone-icon {
            font-size: 48px;
            margin-bottom: 15px;
        }

        .image-preview-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
            margin-bottom: 15px;
        }

        .image-preview-item {
            position: relative;
            border-radius: 11px;
            overflow: hidden;
            border: 3px solid #0e112b;
            background: #f8f9fa;
        }

        .image-preview-item img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            display: block;
        }

        .image-delete-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: #ef4444;
            color: white;
            border: none;
            border-radius: 50%;
            width: 32px;
            height: 32px;
            cursor: pointer;
            font-weight: bold;
            font-size: 20px;
            line-height: 1;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .image-delete-btn:hover {
            background: #dc2626;
            transform: scale(1.1);
        }

        .image-preview-item.deleting {
            opacity: 0.5;
            pointer-events: none;
        }

        #images {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-form-container">
    <div class="form-card">
        <h1 class="form-title">{{ product ? 'Modifier' : 'Cr√©er' }} un Produit</h1>

        <form method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label" for="name">Nom du produit *</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="form-input" 
                    value="{{ product ? product.name : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="description">Description *</label>
                <textarea 
                    id="description" 
                    name="description" 
                    class="form-textarea" 
                    required
                >{{ product ? product.description : '' }}</textarea>
            </div>

            <div class="form-group">
                <label class="form-label" for="images">Images du produit (multiple)</label>
                
                <!-- Existing images -->
                <div id="existing-images" class="image-preview-grid">
                    {% if product and product.medias|length > 0 %}
                        {% for media in product.medias %}
                            <div class="image-preview-item" data-media-id="{{ media.id }}">
                                <img src="{{ asset('uploads/' ~ media.filePath) }}" alt="{{ product.name }}">
                                <button type="button" class="image-delete-btn" onclick="deleteImage({{ media.id }}, '{{ csrf_token('delete' ~ media.id) }}')">√ó</button>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                <!-- Drag and drop zone -->
                <div class="drop-zone" id="dropZone">
                    <div class="drop-zone-icon">üìÅ</div>
                    <div class="drop-zone-text">
                        <strong>Glissez-d√©posez</strong> vos images ici ou <strong>cliquez pour parcourir</strong>
                    </div>
                    <small style="color: #999; font-size: 14px;">
                        Formats accept√©s: JPG, PNG, GIF, MP4, WEBM (max 10MB chacun)
                    </small>
                </div>
                
                <input 
                    type="file" 
                    id="images" 
                    name="images[]" 
                    accept="image/*,video/*"
                    multiple
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="price">Prix (‚Ç¨) *</label>
                <input 
                    type="number" 
                    id="price" 
                    name="price" 
                    class="form-input" 
                    step="0.01" 
                    min="0"
                    value="{{ product ? product.price : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="stock">Stock *</label>
                <input 
                    type="number" 
                    id="stock" 
                    name="stock" 
                    class="form-input" 
                    min="0"
                    value="{{ product ? product.stock : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="category_id">Cat√©gorie *</label>
                <select id="category_id" name="category_id" class="form-select" required>
                    <option value="">S√©lectionnez une cat√©gorie</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if product and product.category and product.category.id == category.id %}selected{% endif %}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    {{ product ? 'üíæ Enregistrer' : '‚ú® Cr√©er' }}
                </button>
                <a href="{{ path('app_admin_products') }}" class="btn-cancel">Annuler</a>
            </div>
        </form>
    </div>
</div>

<script>
// Drag and Drop functionality
const dropZone = document.getElementById('dropZone');
const fileInput = document.getElementById('images');

// Click to open file picker
dropZone.addEventListener('click', () => {
    fileInput.click();
});

// Prevent default drag behaviors
['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, preventDefaults, false);
    document.body.addEventListener(eventName, preventDefaults, false);
});

function preventDefaults(e) {
    e.preventDefault();
    e.stopPropagation();
}

// Highlight drop zone when dragging over it
['dragenter', 'dragover'].forEach(eventName => {
    dropZone.addEventListener(eventName, () => {
        dropZone.classList.add('dragover');
    }, false);
});

['dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, () => {
        dropZone.classList.remove('dragover');
    }, false);
});

// Handle dropped files
dropZone.addEventListener('drop', (e) => {
    const dt = e.dataTransfer;
    const files = dt.files;
    
    // Assign files to the input
    fileInput.files = files;
    
    // Show preview or feedback
    updateDropZoneText(files.length);
}, false);

// Update file input change
fileInput.addEventListener('change', (e) => {
    updateDropZoneText(e.target.files.length);
});

function updateDropZoneText(count) {
    if (count > 0) {
        dropZone.querySelector('.drop-zone-text').innerHTML = 
            `<strong>${count} fichier(s) s√©lectionn√©(s)</strong><br>Soumettez le formulaire pour uploader`;
        dropZone.querySelector('.drop-zone-icon').textContent = '‚úÖ';
    }
}

// AJAX Image Deletion
async function deleteImage(mediaId, csrfToken) {
    if (!confirm('Supprimer cette image ?')) {
        return;
    }

    const imageElement = document.querySelector(`[data-media-id="${mediaId}"]`);
    imageElement.classList.add('deleting');

    try {
        const formData = new FormData();
        formData.append('_token', csrfToken);

        const response = await fetch(`{{ path('app_admin_media_delete', {id: '__ID__'}) }}`.replace('__ID__', mediaId), {
            method: 'POST',
            body: formData
        });

        if (response.ok) {
            // Animate out and remove
            imageElement.style.transition = 'all 0.3s';
            imageElement.style.transform = 'scale(0)';
            imageElement.style.opacity = '0';
            
            setTimeout(() => {
                imageElement.remove();
                
                // Show notification
                document.dispatchEvent(new CustomEvent('show-notification', {
                    detail: { message: 'Image supprim√©e avec succ√®s!' }
                }));
            }, 300);
        } else {
            imageElement.classList.remove('deleting');
            alert('Erreur lors de la suppression de l\'image');
        }
    } catch (error) {
        imageElement.classList.remove('deleting');
        console.error('Error:', error);
        alert('Erreur lors de la suppression de l\'image');
    }
}

// Make function globally available
window.deleteImage = deleteImage;
</script>
{% endblock %}
