{% extends 'base.html.twig' %}

{% block title %}{{ product ? 'Edit' : 'Create' }} Product - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="admin-form-container">
    <div class="form-card">
        <h1 class="form-title">{{ product ? 'Modifier' : 'Cr√©er' }} un Produit</h1>

        <form method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label" for="name">Nom du produit *</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="form-input" 
                    value="{{ product ? product.name : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="description">Description *</label>
                <textarea 
                    id="description" 
                    name="description" 
                    class="form-textarea" 
                    required
                >{{ product ? product.description : '' }}</textarea>
            </div>

            <div class="form-group">
                <label class="form-label" for="images">Images du produit (multiple)</label>
                
                <!-- Existing images -->
                <div id="existing-images" class="image-preview-grid" data-delete-url-template="{{ path('app_admin_media_delete', {id: '__ID__'}) }}">
                    {% if product and product.medias|length > 0 %}
                        {% for media in product.medias %}
                            <div class="image-preview-item" data-media-id="{{ media.id }}">
                                <img src="{{ asset('uploads/' ~ media.filePath) }}" alt="{{ product.name }}">
                                <button type="button" class="image-delete-btn" data-media-id="{{ media.id }}" data-csrf="{{ csrf_token('delete' ~ media.id) }}">√ó</button>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                <!-- Drag and drop zone -->
                <div class="drop-zone" id="dropZone">
                    <div class="drop-zone-icon">üìÅ</div>
                    <div class="drop-zone-text">
                        <strong>Glissez-d√©posez</strong> vos images ici ou <strong>cliquez pour parcourir</strong>
                    </div>
                    <small style="color: #999; font-size: 14px;">
                        Formats accept√©s: JPG, PNG, GIF, MP4, WEBM (max 10MB chacun)
                    </small>
                </div>
                
                <input 
                    type="file" 
                    id="images" 
                    name="images[]" 
                    accept="image/*,video/*"
                    multiple
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="price">Prix (‚Ç¨) *</label>
                <input 
                    type="number" 
                    id="price" 
                    name="price" 
                    class="form-input" 
                    step="0.01" 
                    min="0"
                    value="{{ product ? product.price : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="stock">Stock *</label>
                <input 
                    type="number" 
                    id="stock" 
                    name="stock" 
                    class="form-input" 
                    min="0"
                    value="{{ product ? product.stock : '' }}" 
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label" for="category_id">Cat√©gorie *</label>
                <select id="category_id" name="category_id" class="form-select" required>
                    <option value="">S√©lectionnez une cat√©gorie</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if product and product.category and product.category.id == category.id %}selected{% endif %}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    {{ product ? 'üíæ Enregistrer' : '‚ú® Cr√©er' }}
                </button>
                <a href="{{ path('app_admin_products') }}" class="btn-cancel">Annuler</a>
            </div>
        </form>
    </div>
</div>

{# Admin form behavior moved to assets/js/admin-forms.js and imported in assets/app.js #}
{% endblock %}
