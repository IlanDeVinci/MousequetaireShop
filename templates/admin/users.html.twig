{% extends 'base.html.twig' %}

{% block title %}Admin - Users - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="admin-layout">
    <aside class="admin-sidebar">
        <h2>Admin Panel</h2>
        <nav class="admin-nav">
            <a href="{{ path('app_admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
            <a href="{{ path('app_admin_products') }}" class="admin-nav-link">Products</a>
            <a href="{{ path('app_admin_categories') }}" class="admin-nav-link">Categories</a>
            <a href="{{ path('app_admin_orders') }}" class="admin-nav-link">Orders</a>
            <a href="{{ path('app_admin_users') }}" class="admin-nav-link active">Users</a>
        </nav>
    </aside>

    <main class="admin-content">
        <div class="admin-header">
            <h1>Users Management</h1>
        </div>

        <div class="admin-table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|join(', ') }}</td>
                            <td>
                                <a href="#" class="btn-link">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No users found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
</div>
{% endblock %}
