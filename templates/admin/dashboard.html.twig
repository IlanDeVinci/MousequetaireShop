{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Mousquetaire Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-page {
            background: #bce9ff;
            min-height: calc(100vh - 200px);
        }

        .admin-layout {
            display: grid;
            grid-template-columns: 250px 1fr;
        }

        .admin-sidebar {
            background: #181e4b;
            padding: 30px 20px;
            min-height: calc(100vh - 114px);
        }

        .admin-sidebar h2 {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 24px;
            color: white;
            margin-bottom: 30px;
        }

        .admin-nav {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .admin-nav-link {
            padding: 12px 20px;
            border-radius: 11px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 16px;
            color: white;
            text-decoration: none;
            transition: all 0.3s;
        }

        .admin-nav-link:hover,
        .admin-nav-link.active {
            background: white;
            color: #181e4b;
        }

        .admin-content {
            padding: 40px;
        }

        .admin-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 36px;
            color: #0e112b;
            margin-bottom: 40px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
        }

        .stat-card {
            background: white;
            border: 5px solid #0e112b;
            border-radius: 22px;
            padding: 30px;
            display: flex;
            align-items: center;
            gap: 20px;
            transition: transform 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            font-size: 50px;
        }

        .stat-info h3 {
            font-family: 'Inter', sans-serif;
            font-size: 14px;
            color: #666;
            margin-bottom: 8px;
        }

        .stat-number {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            font-size: 36px;
            color: #0e112b;
        }
    </style>
{% endblock %}

