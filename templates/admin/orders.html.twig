{% extends 'base.html.twig' %}

{% block title %}Admin - Orders - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="admin-page">
    <div class="admin-layout">
    <aside class="admin-sidebar">
        <h2>Admin Panel</h2>
        <nav class="admin-nav">
            <a href="{{ path('app_admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
            <a href="{{ path('app_admin_products') }}" class="admin-nav-link">Products</a>
            <a href="{{ path('app_admin_categories') }}" class="admin-nav-link">Categories</a>
            <a href="{{ path('app_admin_orders') }}" class="admin-nav-link active">Orders</a>
            <a href="{{ path('app_admin_users') }}" class="admin-nav-link">Users</a>
            <a href="{{ path('app_admin_banner_edit') }}" class="admin-nav-link">ðŸŽ¨ Bandeau</a>
        </nav>
    </aside>

    <main class="admin-content">
        <div class="admin-header">
            <h1 class="admin-title">Orders Management</h1>
        </div>

        <div class="admin-table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>User</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>#{{ order.id }}</td>
                            <td>{{ order.user.email }}</td>
                            <td>${{ order.totalPrice|number_format(2) }}</td>
                            <td><span class="badge badge-{{ order.status }}">{{ order.status }}</span></td>
                            <td>{{ order.createdAt|date('M d, Y H:i') }}</td>
                            <td>
                                <a href="#" class="btn-link">View</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No orders found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
    </div>
</div>
{% endblock %}
