{% extends 'base.html.twig' %}

{% block title %}My Account - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="account-page">
    <div class="container">
        <div class="page-header">
            <h1>Mon Compte</h1>
        </div>

        <div class="account-container">
            <div class="account-section">
                <div class="section-header">
                    <h2>Informations du compte</h2>
                    <a href="{{ path('app_account_edit') }}" class="btn-edit-small">‚úèÔ∏è Modifier</a>
                </div>
                <div class="account-info">
                    <p><strong>Email:</strong> {{ app.user.email }}</p>
                    {% if app.user.firstName %}
                        <p><strong>Pr√©nom:</strong> {{ app.user.firstName }}</p>
                    {% endif %}
                    {% if app.user.lastName %}
                        <p><strong>Nom:</strong> {{ app.user.lastName }}</p>
                    {% endif %}
                </div>
            </div>

            <div class="account-section">
                <div class="section-header">
                    <h2>S√©curit√©</h2>
                    <a href="{{ path('app_account_password') }}" class="btn-edit-small">üîí Changer le mot de passe</a>
                </div>
                <div class="account-info">
                    <p><strong>Mot de passe:</strong> ‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</p>
                </div>
            </div>

            <div class="account-section">
                <h2>Historique des commandes</h2>
                {% if orders is empty %}
                    <div class="empty-state">
                        <p>Vous n'avez pas encore pass√© de commande.</p>
                        <a href="{{ path('app_products') }}" class="btn">Commencer mes achats</a>
                    </div>
                {% else %}
                    <div class="orders-list">
                        {% for order in orders %}
                            <div class="order-card">
                                <div class="order-header">
                                    <span class="order-id">Commande #{{ order.id }}</span>
                                    <span class="order-date">{{ order.createdAt|date('d/m/Y') }}</span>
                                </div>
                                <div class="order-body">
                                    <p><strong>Statut:</strong> {{ order.status }}</p>
                                    <p><strong>Total:</strong> {{ order.totalPrice|number_format(2, ',', ' ') }} ‚Ç¨</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
