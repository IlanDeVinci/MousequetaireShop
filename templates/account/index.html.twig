{% extends 'base.html.twig' %}

{% block title %}My Account - Mousquetaire Shop{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>My Account</h1>
    </div>

    <div class="account-container">
        <div class="account-section">
            <h2>Account Information</h2>
            <div class="account-info">
                <p><strong>Email:</strong> {{ app.user.email }}</p>
                <p><strong>Role:</strong> {{ app.user.roles|join(', ') }}</p>
            </div>
        </div>

        <div class="account-section">
            <h2>Order History</h2>
            {% if orders is empty %}
                <div class="empty-state">
                    <p>You haven't placed any orders yet.</p>
                    <a href="{{ path('app_products') }}" class="btn">Start Shopping</a>
                </div>
            {% else %}
                <div class="orders-list">
                    {% for order in orders %}
                        <div class="order-card">
                            <div class="order-header">
                                <span class="order-id">Order #{{ order.id }}</span>
                                <span class="order-date">{{ order.createdAt|date('M d, Y') }}</span>
                            </div>
                            <div class="order-body">
                                <p><strong>Status:</strong> {{ order.status }}</p>
                                <p><strong>Total:</strong> ${{ order.totalPrice|number_format(2) }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
