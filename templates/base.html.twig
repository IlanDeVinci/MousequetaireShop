<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Mousquetaire Shop{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ›’</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <div class="container">
                <a href="{{ path('app_home') }}" class="navbar-brand">ðŸ›’ Mousquetaire Shop</a>
                <div class="navbar-menu">
                    <a href="{{ path('app_home') }}" class="nav-link">Home</a>
                    <a href="{{ path('app_products') }}" class="nav-link">Products</a>
                    
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_cart') }}" class="nav-link">Cart</a>
                        <a href="{{ path('app_account') }}" class="nav-link">Account</a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_dashboard') }}" class="nav-link nav-link-admin">Admin</a>
                    {% endif %}
                    
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="nav-link">Logout</a>
                        <span class="nav-user">{{ app.user.email }}</span>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-link">Login</a>
                        <a href="{{ path('app_register') }}" class="nav-link btn-primary">Register</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <main>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-error">{{ message }}</div>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <div class="container">
                <p>&copy; {{ 'now'|date('Y') }} Mousquetaire Shop. All rights reserved.</p>
            </div>
        </footer>
    </body>
</html>
